---
// Libs
import { Image } from 'astro:assets';

// Component
import HamburgerMenuIcon from '@app/components/icons/HamburgerMenu/index';
import Button from '@app/components/Button/index';
---

<div
  class='bg-white flex justify-between items-center fixed top-0 left-0 right-0 h-[70px] shadow-navMobile py-2 px-8 md:hidden'
>
  <Image
    src='/assets/logo-header-mobile.webp'
    alt='Logo'
    width={70}
    height={28}
  />
  <Button
    className='flex justify-center items-center bg-transparent hover:bg-transparent'
  >
    <HamburgerMenuIcon className='fill-sun stroke-2' />
  </Button>
</div>
