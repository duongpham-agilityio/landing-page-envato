---
export interface LinkProps {
  href: string;
  className?: string;
  label?: string;
}

const { href, className = '', label = '' } = Astro.props;

const styleLink =
  'font-primary font-bold underline-offset-1 hover:underline-offset-0 dark:text-white';
---

<a
  aria-label='Link about page'
  href={href}
  target='_blank'
  class={`${styleLink} ${className}`}>{label}</a
>
