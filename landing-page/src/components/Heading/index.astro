---
import { TYPE_HEADING, TAG_HEADING } from '@app/types/Heading';
export interface HeadingProps {
  className?: string;
  tag: TAG_HEADING;
  type: TYPE_HEADING;
  text: string;
  isStyle?: boolean;
}

const { className = '', tag, type = TYPE_HEADING, text = '' } = Astro.props;

const styleHeading = {
  primary: 'text-3xl leading-10 md:text-4xl md:leading-giant',
  secondary: 'text-2xl text-primary leading-huge',
  elementary: 'text-base text-primary leading-base',
};

const Heading = tag;
---

<Heading class={`font-primary text-primary ${styleHeading[type]} ${className}`}>
  {text}
</Heading>
