---
// types
import { TYPE_BUTTON, TYPE_TAG } from '@app/types/Button';

export interface ButtonProps {
  type?: TYPE_BUTTON;
  tag?: TYPE_TAG;
  className?: string;
  onclick: () => void;
  href?: string;
}

const {
  className = '',
  type = TYPE_BUTTON.PRIMARY,
  tag = '',
  href = '',
  onclick = () => {},
} = Astro.props;

const styleButton = {
  primary: 'leading-14 w-full pt-[25px] pb-5',
  secondary: 'leading-20 w-[280px] h-[80px]',
};

const ButtonTag = tag;
---

<ButtonTag
  href={href}
  class={`font-primary text-lg text-white border-none rounded-none px-[7px] bg-sun hover:bg-secondary cursor-pointer ${styleButton[type]} ${onclick} ${className}`}
>
  <slot />
</ButtonTag>
