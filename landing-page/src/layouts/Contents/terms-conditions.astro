---
import { MainLayout } from '@app/layouts';

// Components
import Heading from '@app/components/Heading/index.astro';

// Style
import '@app/styles/markdown.css';

export interface Props {
  frontmatter: {
    title: string;
  };
}

const { frontmatter } = Astro.props;

const styleListol = `!list-decimal`;
---

<MainLayout>
  <section>
    <div class='grid grid-12 px-6 mx-auto max-w-[1200px]'>
      <Heading
        className='text-center mt-20 mb-[65px] lg:mt-[50px] dark:text-white'
        >{frontmatter.title}</Heading
      >
      <div class='style-ol text-sm md:text-base'>
        <slot />
      </div>
    </div>
  </section>
</MainLayout>
